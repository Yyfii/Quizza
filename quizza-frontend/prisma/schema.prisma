generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Schema para o banco
model User {
  //  cria um id automaticamente
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique //email Ã© uniuco
  name  String
  age   String
}

model Job {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  salary   Float
  location String
}
